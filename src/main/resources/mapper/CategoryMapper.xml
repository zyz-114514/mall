<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopping.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="com.shopping.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (name, parent_id, sort_order, status)
        VALUES (#{name}, #{parentId}, #{sortOrder}, #{status})
    </insert>

    <update id="updateById" parameterType="Category">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM category WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM category WHERE status = 1 ORDER BY sort_order ASC
    </select>

    <select id="selectByParentId" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM category WHERE parent_id = #{parentId} AND status = 1 ORDER BY sort_order ASC
    </select>

</mapper>
